<style>
@import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap");

/* Navigation Bar */
.navbar {
position: sticky;
top: 0;
background-color: #ffffff;
padding: 1rem 0;
box-shadow: 0 2px 20px rgba(255, 107, 0, 0.2);
z-index: 1000;
font-family: "Montserrat", sans-serif;
}

.nav-container {
max-width: 1200px;
margin: 0 auto;
display: flex;
justify-content: space-between;
align-items: center;
padding: 0 2rem;
}

.logo a {
color: #ff6b00;
font-size: 1.8rem;
font-weight: 700;
text-decoration: none;
font-family: "Montserrat", sans-serif;
}

.nav-links {
display: flex;
gap: 2rem;
}

.nav-links a {
color: #333333;
text-decoration: none;
font-weight: 500;
transition: all 0.3s ease;
font-family: "Montserrat", sans-serif;
}

.nav-links a:hover,
.nav-links a.active {
border-bottom: 3px solid #ff6b00;
}

/* Profile Group */
.profile-group {
display: flex;
align-items: center;
gap: 0.5rem;
white-space: nowrap; /* Prevents text from wrapping */
}

.profile-group img {
height: 40px;
width: 40px;
border-radius: 50%;
object-fit: cover;
}

.profile-text {
color: #ff6b00;
text-decoration: none;
font-weight: 600;
text-transform: uppercase;
letter-spacing: 1px;
transition: color 0.3s ease;
font-family: "Montserrat", sans-serif;
}

.profile-text:hover {
color: #e65c00;
}

/* Logout Button */
.logout-btn {
background-color: #ff6b00;
color: white;
border: none;
padding: 0.5rem 1rem;
border-radius: 4px;
font-weight: 500;
cursor: pointer;
transition: all 0.3s ease;
margin-left: 0.5rem;
font-family: "Montserrat", sans-serif;
}

.logout-btn:hover {
background-color: #e65c00;
transform: translateY(-1px);
}

/* Responsive Adjustments */
@media (max-width: 768px) {
.nav-container {
flex-direction: column;
gap: 1rem;
}

.nav-links {
  flex-wrap: wrap;
  justify-content: center;
}

.profile-group {
    margin-top: 10px;
    justify-content: center;
}
}
</style>

<nav class="navbar">
<div class="nav-container">
