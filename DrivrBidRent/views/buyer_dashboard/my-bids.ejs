<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Bids - DriveBidRent</title>

    <style>
        @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800;900&display=swap");

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Montserrat", sans-serif;
        }

        body {
            background-color: #f8f9fa;
            color: #333333;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        .page-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .page-header h1 {
            color: #ff6b00;
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .page-header p {
            color: #666;
            font-size: 1.1rem;
        }

        .bids-container {
            display: grid;
            gap: 2rem;
        }

        .bid-card {
            background: white;
            border-radius: 1rem;
            padding: 1.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-left: 4px solid #ff6b00;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .bid-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .bid-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
        }

        .vehicle-info h3 {
            color: #ff6b00;
            font-size: 1.3rem;
            margin-bottom: 0.5rem;
        }

        .bid-status {
            padding: 0.3rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
        }

        .status-active {
            background-color: #e7f7ef;
            color: #10b981;
        }

        .status-ended {
            background-color: #fef2f2;
            color: #ef4444;
        }

        .status-pending {
            background-color: #fefce8;
            color: #eab308;
        }

        .bid-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .detail-item {
            display: flex;
            flex-direction: column;
        }

        .detail-label {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 0.3rem;
        }

        .detail-value {
            font-size: 1rem;
            font-weight: 600;
            color: #333;
        }

        .bid-actions {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
        }

        .btn {
            padding: 0.5rem 1.5rem;
            border-radius: 0.5rem;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #ff6b00;
            color: white;
        }

        .btn-primary:hover {
            background-color: #e65c00;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

        .btn-secondary:hover {
            background-color: #545b62;
        }

        .no-bids {
            text-align: center;
            padding: 3rem;
            color: #666;
        }

        .no-bids h3 {
            margin-bottom: 1rem;
            color: #ff6b00;
        }

        .explore-link {
            display: inline-block;
            margin-top: 1rem;
            color: #ff6b00;
            text-decoration: none;
            font-weight: 600;
        }

        .explore-link:hover {
            text-decoration: underline;
        }

        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }

            .bid-header {
                flex-direction: column;
                gap: 1rem;
            }

            .bid-details {
                grid-template-columns: 1fr;
            }

            .bid-actions {
                justify-content: stretch;
            }

            .btn {
                flex: 1;
                text-align: center;
            }
        }
    </style>
</head>

<body>
    <%- include('partials/navbar') %>

    <div class="container">
        <div class="page-header">
            <h1>My Bids</h1>
            <p>Track all the auctions you've participated in</p>
        </div>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>

        <div class="bids-container">
            <% if (auctionsWithBids && auctionsWithBids.length > 0) { %>
                <% auctionsWithBids.forEach(auctionBid => { %>
                    <div class="bid-card">
                        <div class="bid-header">
                            <div class="vehicle-info">
                                <h3><%= auctionBid.auction.vehicleName %></h3>
                                <p>Seller: <%= auctionBid.seller.firstName %> <%= auctionBid.seller.lastName %></p>
                            </div>

                            <div class="bid-status status-<%= auctionBid.bidStatus %>">
                                <%= auctionBid.bidStatus.charAt(0).toUpperCase() + auctionBid.bidStatus.slice(1) %>
                            </div>
                        </div>

                        <div class="bid-details">
                            <div class="detail-item">
                                <span class="detail-label">Your Highest Bid</span>
                                <span class="detail-value">
                                    ₹<%= auctionBid.myHighestBid.toLocaleString() %>
                                </span>
                            </div>

                            <% if (auctionBid.bidStatus === 'ended') { %>
                                <div class="detail-item">
                                    <span class="detail-label">Car's Highest Bid</span>
                                    <span class="detail-value">
                                        ₹<%= auctionBid.highestBid ? auctionBid.highestBid.toLocaleString() : 'N/A' %>
                                    </span>
                                </div>
                            <% } %>

                            <div class="detail-item">
                                <span class="detail-label">Total Bids Placed</span>
                                <span class="detail-value"><%= auctionBid.totalBids %></span>
                            </div>

                            <div class="detail-item">
                                <span class="detail-label">Auction Status</span>
                                <span class="detail-value">
                                    <%= auctionBid.bidStatus.charAt(0).toUpperCase() + auctionBid.bidStatus.slice(1) %>
                                </span>
                            </div>
                        </div>

                        <div class="bid-actions">
                            <% if (auctionBid.bidStatus !== 'ended') { %>
                                <a href="/buyer_dashboard?page=auction&id=<%= auctionBid.auction._id %>"
                                   class="btn btn-primary">
                                    View Auction
                                </a>
                            <% } %>

                            <% if (auctionBid.bidStatus === 'active') { %>
                                <a href="/buyer_dashboard?page=auction&id=<%= auctionBid.auction._id %>"
                                   class="btn btn-secondary">
                                    Place New Bid
                                </a>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-bids">
                    <h3>No Bids Yet</h3>
                    <p>You haven't participated in any auctions yet.</p>
                    <a href="/buyer_dashboard?page=auctions" class="explore-link">
                        Explore Available Auctions →
                    </a>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html>
