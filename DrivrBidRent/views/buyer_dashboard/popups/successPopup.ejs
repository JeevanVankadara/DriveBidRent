<style>
    /* Popup Styles */
    .popup {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }
    .popup-content {
        background: white;
        padding: 2rem;
        border-radius: 8px;
        width: 400px;
        position: relative;
        max-height: 90vh;
        overflow-y: auto;
    }
    .close-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 24px;
        cursor: pointer;
        background: none;
        border: none;
    }
    .success-message {
        text-align: center;
        color: green;
        font-weight: bold;
        margin-bottom: 1rem;
    }
    .seller-details {
        margin-bottom: 1rem;
    }
    .ok-btn {
        display: block;
        margin: 0 auto;
        padding: 0.75rem 1.5rem;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-weight: 500;
    }
    .ok-btn:hover {
        background-color: #45a049;
    }
</style>
<!-- Success Popup -->
<div class="popup" id="successPopup">
    <div class="popup-content">
        <button class="close-btn" onclick="closeSuccessPopup()">Ã—</button>
        <div class="success-message">Payment Successful!</div>
        <div class="seller-details">
            <h3>Seller Contact Information</h3>
            <p><strong>Address:</strong> 
                <%= [seller.doorNo, seller.street, seller.city, seller.state].filter(part => part && part !== 'undefined').join(', ') || 'Address not available' %>
            </p>
            <p><strong>Phone:</strong> 
                <%= seller.phone && seller.phone !== 'undefined' ? seller.phone : 'Phone not available' %>
            </p>
        </div>
        <button class="ok-btn" onclick="redirectToDashboard()">OK</button>
    </div>
</div>