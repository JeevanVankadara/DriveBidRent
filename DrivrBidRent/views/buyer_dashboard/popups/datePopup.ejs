
<style>
    /* Popup Styles */
    .popup {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }
    .popup-content {
        background: white;
        padding: 2rem;
        border-radius: 8px;
        width: 400px;
        position: relative;
        max-height: 90vh;
        overflow-y: auto;
    }
    .close-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 24px;
        cursor: pointer;
        background: none;
        border: none;
    }
    .date-inputs {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 1rem;
    }
    .date-inputs label {
        font-weight: 500;
    }
    .date-inputs input {
        padding: 0.5rem;
        border: 1px solid #ddd;
        border-radius: 4px;
    }
    .date-note {
        font-size: 0.85rem;
        color: #666;
        margin-top: 0.25rem;
    }
    .error-message {
        color: #d9534f;
        font-size: 0.85rem;
        margin-top: 0.25rem;
        display: none;
    }
    .driver-option {
        margin-top: 1rem;
        padding: 0.75rem;
        background: #f5f5f5;
        border-radius: 4px;
    }
    .driver-option label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    #totalCost {
        margin: 1rem 0;
        font-weight: 500;
    }
    .cost-breakdown {
        font-size: 0.9rem;
        color: #666;
        margin-top: 0.5rem;
    }
    .placebid-btn {
        background-color: #ff6b00;
        color: white;
        cursor: pointer;
        display: inline-block;
        padding: 0.75rem 1.5rem;
        border-radius: 0.3rem;
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.3s ease;
        margin-top: 1rem;
        text-align: center;
    }
    .placebid-btn:hover {
        background-color: #e65c00;
    }
</style>
<!-- Date Selection Popup -->
<div class="popup" id="datePopup">
    <div class="popup-content">
        <button class="close-btn" onclick="closeDatePopup()">×</button>
        <h2>Select Rental Dates</h2>
        <div class="date-inputs">
            <label for="pickupDate">Pickup Date:</label>
            <input type="date" id="pickupDate" onchange="validatePickupDate(); calculateCost();">
            <div id="pickupDateError" class="error-message"></div>
            <div class="date-note">Pickup date must be within 3 days from today.</div>
            
            <label for="dropDate">Drop Date:</label>
            <input type="date" id="dropDate" onchange="validateDropDate(); calculateCost();">
            <div id="dropDateError" class="error-message"></div>
            <div class="date-note">Drop date must be after pickup date.</div>
            
            <% if (driverAvailable) { %>
            <div class="driver-option">
                <label for="includeDriver">
                    <input type="checkbox" id="includeDriver" onchange="calculateCost()">
                    Include Driver (₹<%= driverRate %>/day)
                </label>
            </div>
            <% } %>
        </div>
        <p id="totalCost">Total Cost: ₹0</p>
        <div id="costBreakdown" class="cost-breakdown"></div>
        <div class="placebid-btn" onclick="proceedToPayment()">Proceed to Payment</div>
    </div>
</div>